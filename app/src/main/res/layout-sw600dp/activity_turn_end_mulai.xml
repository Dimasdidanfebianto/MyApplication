<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="20dp"
    tools:context=".TurnEnd.TurnEndInput.TurnEndMulaiActivity">

    <TextView
        android:id="@+id/judul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Profiling Element  of Prosody In Speech Commuincation"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="60sp" />

    <TextView
        android:id="@+id/indver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/judul"
        android:layout_marginTop="30dp"
        android:text="Indonesian Version"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="50sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtnama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="150dp"
            android:padding="20dp"
            android:text="Masukan Nama"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="50sp" />

        <EditText
            android:id="@+id/nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="150dp"
            android:layout_marginTop="20dp"
            android:hint="Masukan Nama"
            android:padding="20dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textColorHint="#ACA7A7"
            android:textSize="50sp" />

        <Button
            android:id="@+id/btnMulai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="150dp"
            android:layout_marginTop="20dp"
            android:padding="20dp"
            android:text="Mulai Quiz"
            android:textSize="50sp" />


    </LinearLayout>


</RelativeLayout>