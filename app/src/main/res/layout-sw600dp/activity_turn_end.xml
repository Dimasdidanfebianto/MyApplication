<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="20dp"
    tools:context=".TurnEnd.TurnEndInput.QuizTurnEndInput">

    <TextView
        android:id="@+id/judul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="TURN END"
        android:textColor="@color/black"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/judul2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/judul"
        android:gravity="center_horizontal"
        android:text="INPUT"
        android:textColor="@color/black"
        android:textSize="50sp" />

    <ImageButton
        android:id="@+id/gambarObjek"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_below="@id/judul"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="150dp"
        android:background="@color/white"
        android:scaleType="centerCrop"
        android:src="@drawable/o_air" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gambarObjek">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/JawabanTanya"
                android:layout_width="200dp"
                android:layout_height="400dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:padding="20dp"
                android:scaleType="centerCrop"
                android:src="@drawable/soaltanya" />

            <ImageButton
                android:id="@+id/JawabanDeklaratif"
                android:layout_width="200dp"
                android:layout_height="400dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:padding="20dp"
                android:scaleType="centerCrop"
                android:src="@drawable/soaldeklaratif" />


        </LinearLayout>

    </LinearLayout>


</RelativeLayout>