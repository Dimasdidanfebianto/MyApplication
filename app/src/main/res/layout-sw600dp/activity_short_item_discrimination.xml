<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Form.ShortItem.ShortItemDiscriminationActivity">

    <TextView
        android:id="@+id/judul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Short Item"
        android:textColor="@color/black"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/judul2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/judul"
        android:gravity="center_horizontal"
        android:text="Discrimination"
        android:textColor="@color/black"
        android:textSize="50sp" />

    <ImageButton
        android:scaleType="centerCrop"
        android:layout_margin="100dp"
        android:id="@+id/ImBtnGambar"
        android:layout_width="match_parent"
        android:layout_height="700dp"
        android:layout_below="@id/judul2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:src="@drawable/ic_launcher_background" />

    <Button
        android:padding="20dp"
        android:textSize="50sp"
        android:id="@+id/btnNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ImBtnGambar"
        android:layout_centerHorizontal="true"
        android:text="Next" />


</RelativeLayout>